//this segment is split into 3 parts to work as a calculator. It grabs a number, asks for the operation, and then asks for the final number
Console.WriteLine("Please input a number: ");
string Number = Console.ReadLine();
int Test = int.Parse(Number);
Console.WriteLine("Please input an operative (please write it out like addition multiplication etc): ");
string Operator = Console.ReadLine();
Console.WriteLine("Please input another number ");
string Number2 = Console.ReadLine();
int Test2 = int.Parse(Number2);
//the meat and potatoes. This is the actual calculator part of the program that does all of the math
if (Operator == "addition")
{
    int result = Test + Test2;
    Console.WriteLine(result);
}
if (Operator == "multiplication")
{
    int result = Test * Test2;
    Console.WriteLine(result);
}
if (Operator == "division")
{
    int result = Test / Test2;
    Console.WriteLine(result);
}
if (Operator == "Mulitplication")
{
    int result = Test * Test2;
    Console.WriteLine(result);
}
if (Test / 0 == 0)
{
    Console.WriteLine("You cannot divide by zero, please try again!");
}
